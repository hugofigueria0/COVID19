<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Pessoas"
        android:layout_width="97dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"


        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"

        android:layout_marginRight="90dp"
        android:background="@drawable/borda_arrendondada"
        android:onClick="VaiParaPeople"
        android:text="@string/Pessoas"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="italic"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/Movimentos"
        android:layout_width="96dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"

        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/borda_arrendondada"

        android:onClick="VaiParaMovimentos"
        android:text="@string/Movimentos"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="italic"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pessoas" />

    <Button
        android:id="@+id/Infetados"
        android:layout_width="99dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/borda_arrendondada"
        android:onClick="VaiParaInfetados"
        android:text="@string/Infetados"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="italic"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Movimentos" />

    <Button
        android:id="@+id/Sair"
        android:layout_width="102dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"

        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/borda_arrendondada"

        android:onClick="SaiDaApp"
        android:text="@string/Sair"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="italic"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Infetados" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="654dp"
        android:layout_height="201dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toTopOf="@+id/Pessoas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cornonasa" />

</android.support.constraint.ConstraintLayout>