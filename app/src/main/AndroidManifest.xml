<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ipg.covid_19">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuAdicionarInfectado"></activity>
        <activity android:name=".MenuVerInfectados" />
        <activity android:name=".MenuVerMovimento" />
        <activity android:name=".MenuAdicionarMovimento" />
        <activity android:name=".MenuPessoasEliminar" />
        <activity android:name=".MenuPessoasEditar" />
        <activity android:name=".menu_ver_pessoas" />
        <activity android:name=".MenuInfetados" />
        <activity android:name=".MenuPessoas" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="pt.ipg.covid_19"
            android:name=".CovidContentProvider"
            android:exported="false"
            />
    </application>

</manifest>